<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EPOD"
        tools:targetApi="tiramisu">

        <service
                android:name=".application.auth.domain.controller.AuthController"
                android:exported="false"/>
        <service
            android:name=".application.job_order.domain.service.JobOrderService"
            android:exported="false"/>

        <activity
            android:name=".screens.job_management.job_order.details.JobOrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".screens.job_management.job.view.JobFragment"
            android:exported="false" />
        <activity
            android:name=".screens.job_management.job_order.main.JobOrderFragment"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.auth.LoginActivity"
            android:exported="false" />
    </application>

</manifest>